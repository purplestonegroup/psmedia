<section class="video_form">

  <div class="slide">
    <ul class="bxslider">
      <li>
        <h2>Want to Get Your Website Ready to Mobile? Responsive Design for CMS Development.</h2>
        <div class="transp"></div>
        <%= image_tag "slide_responsive_psm.png" %>
      </li>
      <li>
        <h2>We Can Optimize Your Online Marketing Campaing with Very Competitive Fees!</h2>
        <%= image_tag "slide_onlinemark_psm.png" %>
        <div class="transp"></div>
      </li>
      <li>
        <h2>Branding, Video Editing, Printing, Off-line Marketing Strategy, What do You Need?</h2>
        <%= image_tag "slide_video_psm.png" %>
        <div class="transp"></div>
      </li>
    </ul>
  </div>

</section>

<section class="eight columns">

    <div class="postslist">
        <div class="single_post group">

      <% @posts.each do |post| %>
        <div class="single_post group">

            <div class="post_details">
              <h2><%= link_to post.title, category_post_path(post.category, post) %></h2>
              <%= image_tag post.image(:header), class: "post_image" %>
              <p><%= format truncate post.body, length: 100 %></p>
            </div>

        </div>
      <% end %>

        </div>
    </div>

</section>

<section class="four columns">

<%= render :partial => 'shared/categoriesmenu' %>

</section>